<!DOCTYPE html>
<html lang="pt-br">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <main class="form-container" style="margin-top: 10%">
      <%- include('../partials/flashError.ejs') %>
      <form class="form" action="/user/update/password" method="post">
        <h1>Alterar senha</h1>

        <div class="form-control">
          <label for="oldPassword">Senha antiga</label>
          <input
            class="form-input"
            type="password"
            id="oldPassword"
            name="oldPassword"
            placeholder="Digite sua senha antiga"
            required
          />
        </div>

        <div class="form-control">
          <label for="newPassword">Nova senha</label>
          <input
            class="form-input"
            type="password"
            id="newPassword"
            name="newPassword"
            placeholder="Digite sua nova senha"
            required
          />
        </div>

        <button class="button button-primary">Alterar</button>
      </form>
    </main>
  </body>
  <%- include('../partials/scripts.ejs') %>
</html>
